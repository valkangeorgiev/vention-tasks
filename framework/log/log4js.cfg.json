{
  "appenders": {
    "out": { 
      "type": "console",
      "layout": {
        "type": "pattern",
        "pattern": "%[[%d{yyyy-MM-dd hh:mm:ss}] [%p] %m%]"
      },
      "opts": {
        "logLevelColours": {
          "TRACE": "grey",
          "DEBUG": "cyan",
          "INFO": "green",
          "WARN": "yellow",
          "ERROR": "red",
          "FATAL": "red"
        }
      }
    },
    "app": { 
      "type": "file", 
      "filename":  "logs/logs.log",
      "layout": { 
        "type": "pattern", 
        "pattern": "[%d{yyyy-MM-dd hh:mm:ss}] [%p] %m%n"
      }
    }
  },
  "categories": {
    "default": { "appenders": ["out", "app"], "level": "debug" },
    "trace": { "appenders": ["app"], "level": "trace" }
  }
}